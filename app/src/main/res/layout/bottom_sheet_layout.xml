<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:behavior_peekHeight="56dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_bottomsheet_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Bottom Sheet"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btn_bottomsheet_terminate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/x" />
    </RelativeLayout>

    <View
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_below="@+id/rl_bottomsheet_title" />

    <RelativeLayout
        android:id="@+id/rl_bottomsheet_faceboock"
        android:layout_below="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/iv_bottomsheet_faceboock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/facebook"/>
        <TextView
            android:layout_toRightOf="@+id/iv_bottomsheet_faceboock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="faceboock" />
        <ImageView
            android:id="@+id/iv_bottomsheet_check_facebook"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/check"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View
        android:id="@+id/facebookView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_below="@+id/rl_bottomsheet_faceboock" />

    <RelativeLayout
        android:id="@+id/rl_bottomsheet_twitter"
        android:layout_below="@+id/facebookView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/iv_bottomsheet_twitter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"/>
        <TextView
            android:layout_toRightOf="@+id/iv_bottomsheet_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="twitter" />
        <ImageView
            android:id="@+id/iv_bottomsheet_check_twitter"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/check"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View
        android:id="@+id/twitterView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_below="@+id/rl_bottomsheet_twitter" />

    <RelativeLayout
        android:id="@+id/rl_bottomsheet_instagram"
        android:layout_below="@+id/twitterView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/iv_bottomsheet_instagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"/>
        <TextView
            android:layout_toRightOf="@+id/iv_bottomsheet_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="instagram" />
        <ImageView
            android:id="@+id/iv_bottomsheet_check_instagram"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/check"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View
        android:id="@+id/instagramView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_below="@+id/rl_bottomsheet_instagram" />

    <RelativeLayout
        android:id="@+id/rl_bottomsheet_linkedin"
        android:layout_below="@+id/rl_bottomsheet_instagram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/iv_bottomsheet_linkedin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/facebook"/>
        <TextView
            android:layout_toRightOf="@+id/iv_bottomsheet_linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="linkedin" />
        <ImageView
            android:id="@+id/iv_bottomsheet_check_linkedin"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/check"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bdbdbd"
        android:layout_below="@+id/rl_bottomsheet_linkedin" />

</RelativeLayout>